@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Ваши контакты";
}
@if (Model?.Count() == 0)
{
    <h1 class="my-5 text-center">There is no one contact</h1>
    <button data-bs-toggle="modal" data-bs-target="#modalCreate" class="btn btn-secondary" type="button">Add new contact</button>
}
else
{
    <form>
        <h1 class="my-5 text-center">@ViewData["Title"]</h1>
        <div class="container mt-5">
            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th class="px-5">Name</th>
                    <th>Phone number</th>
                    <th>Job title</th>
                    <th>Birth date</th>
                    <th>Action</th>
                </tr>
                </thead>


                @foreach (var contact in Model)
                {
                    <tr class="shadow-lg py-2 mb-4">
                        <td class="px-5">@contact.Name</td>
                        <td>@contact.MobilePhone</td>
                        <td>@contact.JobTitle</td>
                        <td>@contact.BirthDate.ToString("dd MMMM yyyy")</td>
                        <td><button data-bs-toggle="modal" data-bs-target="#modalEdit" class="btn btn-secondary" type="button">Edit</button></td>
                        @await Html.PartialAsync("EditContact", contact)
                    </tr>
                }
            </table>

            <button data-bs-toggle="modal" data-bs-target="#modalCreate" class="btn btn-secondary" type="button">Add new contact</button>
        </div>
    </form>
}

@await Html.PartialAsync("CreateContact", new CreateContact())



